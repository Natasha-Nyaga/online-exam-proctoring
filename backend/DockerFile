# backend/Dockerfile
# Use a Python base image
FROM python:3.10-slim

# Set the working directory in the container
WORKDIR /app

# Copy the requirements file and install dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy the rest of the application code
# NOTE: This copies the *entire* backend folder into the container's /app
COPY . .

# Set environment variables for Gunicorn/Flask
ENV FLASK_APP=app.py
ENV FLASK_ENV=production

# Expose the port (e.g., 5000 is common for Flask)
EXPOSE 5000

# Command to run the application using Gunicorn (a production WSGI server)
# You need to install gunicorn in your requirements.txt
CMD ["gunicorn", "-w", "4", "-b", "0.0.0.0:5000", "app:app"]